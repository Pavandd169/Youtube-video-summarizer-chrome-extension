{
  "manifest_version": 3,
  "name": "YouTube Video Summarizer",
  "version": "1.0",
  "description": "Summarize YouTube videos using LLM running in local",
  "permissions": [],
    "host_permissions": [
      "https://www.youtube.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/watch*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
}